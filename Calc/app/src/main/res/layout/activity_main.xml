<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <TextView
            android:id="@+id/TextView1"
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:layout_margin="5dp"
            android:background="@drawable/border"
            android:hint="Enter Your Number"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/B_Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="276dp"
            android:background="@drawable/icons8_clear_symbol_100">

        </ImageButton>
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/frame">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/B7"
                android:layout_margin="5dp"
                android:text="7"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B8"
                android:layout_margin="5dp"
                android:text="8"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B9"
                android:layout_margin="5dp"
                android:text="9"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B_mul"
                android:layout_margin="5dp"
                android:text="*"
                android:textSize="25dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/B4"
                android:layout_margin="5dp"
                android:text="4"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B5"
                android:layout_margin="5dp"
                android:text="5"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B6"
                android:layout_margin="5dp"
                android:text="6"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B_Sub"
                android:layout_margin="5dp"
                android:text="-"
                android:textSize="25dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/B1"
                android:layout_margin="5dp"
                android:text="1"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B2"
                android:layout_margin="5dp"
                android:text="2"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B3"
                android:layout_margin="5dp"
                android:text="3"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B_Add"
                android:layout_margin="5dp"
                android:text="+"
                android:textSize="25dp"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center">

            <Button
                android:id="@+id/B_Dot"
                android:layout_margin="5dp"
                android:text="."
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B0"
                android:layout_margin="5dp"
                android:text="0"
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B_Equel"
                android:layout_margin="5dp"
                android:text="="
                android:textSize="25dp"/>

            <Button
                android:id="@+id/B_Div"
                android:layout_margin="5dp"
                android:text="/"
                android:textSize="25dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>




